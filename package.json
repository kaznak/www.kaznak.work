{
  "name": "www.kaznak.work",
  "author": "kaznak <kaznak.at.work@gmail.com>",
  "license": "No License",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:icons": "real-favicon generate real-fabicon.json public/icons/fabicon-data.json public/icons",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .{babel,prettier}rc **/*.{json,js,ts,tsx,css,md,mdx}",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "pnpm run lint && pnpm run type-check && pnpm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "pnpm run lint",
      "pnpm run format"
    ]
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.5",
    "@mdx-js/react": "^1.6.5",
    "next": "latest",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@testing-library/react": "^10.2.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^13.13.12",
    "@types/react": "^16.9.36",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-jest": "^25.5.1",
    "cli-real-favicon": "^0.0.8",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.2.10",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "tailwindcss": "^1.4.6",
    "typescript": "^3.9.5"
  }
}
